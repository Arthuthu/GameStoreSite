<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <div class="logo">
            @Html.ActionLink("GameStore", "Index", "Home")
        </div>
        <div class="navbar-links">
            <ul>
                <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li>@Html.ActionLink("Jogos", "Index", "Jogos")</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    <footer>
        <div class="footer-div">
            <div class="assinatura-div">
                <div class="assinaturas-div-label">
                    Ganhe descontos e um jogo grátis todos mês!
                </div>
                <div>
                    <button class="assinatura-button">
                        Assine já!
                    </button>
                </div>
            </div>

            <div class="redes-sociais-div">
                <div>
                    Siga a gente nas redes sociais para ficar por dentro de novidades.
                </div>

                <div class="footer-icones">
                    <a href="#" class="fa fa-facebook" id="socialmedia-icons"></a>
                    <a href="#" class="fa fa-twitter" id="socialmedia-icons"></a>
                    <a href="#" class="fa fa-instagram" id="socialmedia-icons"></a>
                    <a href="#" class="fa fa-youtube" id="socialmedia-icons"></a>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</body>
</html>
